package som.internousdev.webproj3.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import som.internousdev.webproj3.dto.HelloStrutsDTO;
import som.internousdev.webproj3.util.DBConnector;

public class HelloStrutsDAO {

	public HelloStrutsSTO select(){
		DBConnectou db = new DBConnector();
		Connection con = db.getConnection();
		som.internousdev.webproj3.dto.HelloStrutsDTO dto = new HelloStrutsDTO();

		String sql = "select * from users";
		try{
			PreparedStatement ps = con.prepareStatement(sql);
			ResultsSet rs = ps.executeQuery();

			if(rs.next()){
				dto.setResult("MySQLと接続できます。");
			}else{
				dto.setResult("MySQLと接続できません。");
			}
		}catch(SQLException e){
			e.printStackTrace();
		}
		try{
			con.close();
		}catch(SQLException e){
			e.printStackTrace();
		}
		return dto;
	}

}
